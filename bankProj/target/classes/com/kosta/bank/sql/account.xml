<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.account">
	<insert id="insertAccount" parameterType="com.kosta.bank.dto.Account">
		<![CDATA[
			insert into account (id, name, balance, type, grade)
			values (#{id},#{name},#{balance},#{type},#{grade})
		]]>
	</insert>
	
	<select id="selectAccount" parameterType="String" resultType="com.kosta.bank.dto.Account" >
		<![CDATA[
			select * from account where id = #{id}
		]]>
	</select>
	
	<update id="updateAccountBalance" parameterType="Map">
		<![CDATA[
			update account set balanace = #{balance} where id = #{id}
		]]>
	</update>
	
	<select id="selectAccList" resultType="com.kosta.bank.dto.Account">
		<![CDATA[
			select * from account
		]]>
	</select>
</mapper>